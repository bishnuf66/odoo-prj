
<odoo>

 <record id="action_parents" model="ir.actions.act_window">
        <field name="name">parentss</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.parents</field>
        <field name="view_mode">tree,form</field>
    </record>
    

  <record id="parents_form" model="ir.ui.view">
        <field name="name">student.parents.form</field>
        <field name="model">school.parents</field>
        <field name="arch" type="xml">

            <form>
               <sheet>
               <group>
               <field name="name"/>
                <field name="address"/>                
                <field name="contact"/>
                <field name="gender"/>
               </group>
               </sheet>
            </form>
        </field>
    </record>


    <record id="parents_tree" model="ir.ui.view">
        <field name="name">parents.tree</field>
        <field name="model">school.parents</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="contact"/>
                    <field name="address"/>
                    <field name="gender"/>
                
                </tree>   
        </field> 
        </record>

</odoo>